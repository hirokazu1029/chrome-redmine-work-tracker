{
  "manifest_version": 2,

  "name": "Redmine Work Tracker",
  "description": "Track your work",
  "version": "0.1.7",
  "homepage_url": "https://github.com/negokaz/chrome-redmine-time-tracker",

  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],

  "icons": {
     "16": "icon/Stopclock_16.png",
     "32": "icon/Stopclock_32.png",
     "48": "icon/Stopclock_48.png",
    "128": "icon/Stopclock_128.png"
  },

  "background": {
    "scripts": ["js/jquery.js", "js/storage.js", "js/task.js", "js/timer.js", "js/background.js"]
  },

  "browser_action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}
